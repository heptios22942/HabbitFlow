<UserControl x:Class="HabbitFlow.Views.Habbit.HabbitWriteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converters="clr-namespace:HabbitFlow.Utilities.Converters"
             xmlns:enums="clr-namespace:HabbitFlow.Models.Enums"
             mc:Ignorable="d" 
             d:DesignHeight="1000" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:HabitTypeConverter x:Key="HabitTypeConverter"/>
    </UserControl.Resources>

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White" Command="{Binding CancelCommand}">
                    <materialDesign:PackIcon Kind="Close"/>
                </Button>

                <TextBlock Grid.Column="1" Text="Создание привычки" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"
                          TextAlignment="Center"/>

                <Button Grid.Column="2" Content="Сохранить" 
                        Background="White"
                        Foreground="#4CAF50"
                        BorderThickness="0"
                        Padding="12,6"
                        FontWeight="SemiBold"
                        Command="{Binding SaveCommand}"/>
            </Grid>
        </Border>

   
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20" MaxWidth="600">

                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Основная информация" 
                                  FontSize="16" FontWeight="Bold" Foreground="#333333"
                                  Margin="0,0,0,15"/>

                       
                        <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                BorderThickness="1" BorderBrush="#E0E0E0" 
                                Padding="12" Background="White" FontSize="13"
                                materialDesign:HintAssist.Hint="Название привычки *"
                                Margin="0,0,0,12"/>

                   
                        <TextBox Text="{Binding Plan, UpdateSourceTrigger=PropertyChanged}" 
                                BorderThickness="1" BorderBrush="#E0E0E0" 
                                Padding="12" Background="White" FontSize="13"
                                materialDesign:HintAssist.Hint="План действий"
                                Height="80" VerticalScrollBarVisibility="Auto"
                                TextWrapping="Wrap" AcceptsReturn="True"
                                Margin="0,0,0,12"/>

                   
                        <ComboBox ItemsSource="{Binding HabitTypes}"
                                 SelectedItem="{Binding SelectedHabitType}"
                                 BorderThickness="1" BorderBrush="#E0E0E0" 
                                 Padding="12" Background="White" FontSize="13"
                                 materialDesign:HintAssist.Hint="Тип привычки"
                                 Margin="0,0,0,12">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource HabitTypeConverter}}"
                                               FontSize="13"/>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                    
                        <ComboBox ItemsSource="{Binding AvailableGroups}"
                                 SelectedItem="{Binding SelectedGroup}"
                                 BorderThickness="1" BorderBrush="#E0E0E0" 
                                 Padding="12" Background="White" FontSize="13"
                                 materialDesign:HintAssist.Hint="Группа привычек"
                                 Margin="0,0,0,12">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <Border Width="24" Height="24" CornerRadius="12" 
                                                Background="{Binding Color}" Margin="0,0,10,0">
                                            <TextBlock Text="{Binding Icon}" FontSize="12" 
                                                      Foreground="White" HorizontalAlignment="Center" 
                                                      VerticalAlignment="Center" FontWeight="Bold"/>
                                        </Border>
                                        <TextBlock Text="{Binding Name}" VerticalAlignment="Center" FontSize="13"/>
                                        <TextBlock Text="{Binding Habits.Count, StringFormat=' ({0})'}" 
                                                  Foreground="#666666" VerticalAlignment="Center" 
                                                  Margin="5,0,0,0" FontSize="12"/>
                                    </StackPanel>
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <TextBlock Text="{Binding HabitsCount, StringFormat='Привычек в группе: {0}'}"
                                  FontSize="12" Foreground="#666666" FontStyle="Italic"
                                  Margin="0,5,0,0"/>
                    </StackPanel>
                </Border>

               
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Padding="20" Margin="0,0,0,20">
                    <StackPanel>
                        <TextBlock Text="Расписание" 
                                  FontSize="16" FontWeight="Bold" Foreground="#333333"
                                  Margin="0,0,0,15"/>

                         
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Время напоминания:" 
                                      FontSize="13" FontWeight="Medium" Foreground="#333333"
                                      VerticalAlignment="Center" Width="150"/>
                            <ComboBox ItemsSource="{Binding TimeOptions}"
                                     SelectedItem="{Binding ReminderTimeString}"
                                     BorderThickness="1" BorderBrush="#E0E0E0" 
                                     Padding="8" Background="White" FontSize="13"
                                     Width="100"
                                     HorizontalAlignment="Left"/>
                        </StackPanel>

                       
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                            <TextBlock Text="Длительность:" 
                                      FontSize="13" FontWeight="Medium" Foreground="#333333"
                                      VerticalAlignment="Center" Width="150"/>
                            <ComboBox ItemsSource="{Binding DurationOptions}"
                                     SelectedItem="{Binding DurationMinutes}"
                                     BorderThickness="1" BorderBrush="#E0E0E0" 
                                     Padding="8" Background="White" FontSize="13"
                                     Width="140"
                                     HorizontalAlignment="Left">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Setter Property="Text" Value="{Binding}"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding}" Value="{x:Null}">
                                                            <Setter Property="Text" Value="Без ограничения"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                         
                        <CheckBox Content="Особо отменяемая привычка (повторное напоминание через 5 минут)" 
                                 IsChecked="{Binding IsSpecialCancelable}"
                                 FontSize="13" Foreground="#333333"
                                 Margin="0,10,0,0"/>
                    </StackPanel>
                </Border>

                
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Напоминания" 
                                  FontSize="16" FontWeight="Bold" Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <TextBlock Text="Напоминания будут приходить в указанное время." 
                                  FontSize="13" Foreground="#666666"
                                  Margin="0,0,0,10"
                                  TextWrapping="Wrap"/>

                        <TextBlock Text="Для особо отменяемых привычек будет отправлено повторное напоминание через 5 минут после отказа." 
                                  FontSize="12" Foreground="#888888" FontStyle="Italic"
                                  TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>

            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>