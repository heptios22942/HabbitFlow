<UserControl x:Class="HabbitFlow.Views.Habbit.HabbitsGroupEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="FormatListBulletedSquare" 
                                        Foreground="White" VerticalAlignment="Center" Width="24" Height="24"/>
                <TextBlock Grid.Column="1" Text="Редактирование группы" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>

                <!-- Правая часть (опционально можно оставить пустой) -->
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <!-- Можно добавить имя пользователя позже -->
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20">
                <!-- Group Editor Card -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="25">
                    <StackPanel >

                        <!-- Иконка группы -->
                        <StackPanel>
                            <TextBlock Text="Иконка группы" 
                                      FontSize="14" FontWeight="SemiBold" Foreground="#333333" 
                                      Margin="0,0,0,8"/>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Top">
                                <ComboBox ItemsSource="{Binding AvailableIcons}"
                                          SelectedItem="{Binding Icon}"
                                          Width="80" 
                                          Height="50" 
                                          FontSize="25" 
                                          HorizontalContentAlignment="Center"
                                          VerticalContentAlignment="Center"
                                          BorderBrush="#CCCCCC" 
                                          Background="White"
                                         
                                          BorderThickness="1"
                                           ScrollViewer.VerticalScrollBarVisibility="Auto"
          ScrollViewer.CanContentScroll="True">
                                    <ComboBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                                                       FontSize="25" 
                                                       HorizontalAlignment="Stretch" 
                                                       VerticalAlignment="Stretch"
                                                       Background="White"
                                                       />
                                        </DataTemplate>
                                    </ComboBox.ItemTemplate>
                                </ComboBox>
                                <TextBlock Text="Примеры: 📚 🏃 🧘 💪"
                                           FontSize="12" Foreground="#666666" 
                                           FontStyle="Italic" Margin="10,15,0,0"/>
                            </StackPanel>
                        </StackPanel>

                        <!-- Название группы -->
                        <StackPanel Margin="20">
                            <TextBlock Text="Название группы *" 
                                      FontSize="14" FontWeight="SemiBold" Foreground="#333333" 
                                      Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                                     Height="45"
                                     FontSize="16"
                                     Padding="12,10"
                                     BorderBrush="#CCCCCC" BorderThickness="1"
                                     Background="White"/>
                        </StackPanel>

                        <!-- Мотивационные уведомления -->
                        <CheckBox Content="Присылать мотивационные сообщения"
                                  IsChecked="{Binding EnableMotivation}" Style="{StaticResource MaterialDesignChoiceChipOutlineRadioButton}"
                                  FontSize="14" Foreground="#333333"/>

                        <!-- Памятка -->
                        <StackPanel>
                            <TextBlock Text="Памятка (ваши личные рекомендации)" 
                                      FontSize="14" FontWeight="SemiBold" Foreground="#333333" 
                                      Margin="0,0,0,8"/>
                            <TextBox Text="{Binding Memo, UpdateSourceTrigger=PropertyChanged}"
                                     AcceptsReturn="True"
                                     TextWrapping="Wrap"
                                     VerticalScrollBarVisibility="Auto"
                                     Height="100"
                                     FontSize="14"
                                     Padding="12,10"
                                     BorderBrush="#CCCCCC" BorderThickness="1"
                                     Background="White"/>
                            <TextBlock FontSize="12" Foreground="#666666" FontStyle="Italic" Margin="0,5,0,0">
    
    <Hyperlink NavigateUri="https://royallib.com/read/musasi_miyamoto/kniga_pyati_kolets.html#0"
               RequestNavigate="Hyperlink_RequestNavigate">
        Совет из книги (Рекоммендовано к ознакомлению)
    </Hyperlink>

                            </TextBlock>
                        </StackPanel>

                        <!-- Кнопки -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                            <Button Content="Отмена"
                                    Command="{Binding GoBackCommand}"
                                    Background="White"
                                    Foreground="#4CAF50"
                                    BorderBrush="#4CAF50"
                                    BorderThickness="1"
                                   
                                    FontWeight="SemiBold"
                                    Cursor="Hand"
                                    Margin="0,0,15,0">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#F5F5F5"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#E8F5E8"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>

                            <Button Content="Сохранить"
                                    Command="{Binding SaveCommand}"
                                    Background="#4CAF50"
                                    Foreground="White"
                                    BorderThickness="0"
                                    
                                    FontWeight="SemiBold"
                                    Cursor="Hand">
                                <Button.Template>
                                    <ControlTemplate TargetType="Button">
                                        <Border x:Name="border"
                                                Background="{TemplateBinding Background}"
                                                BorderBrush="{TemplateBinding BorderBrush}"
                                                BorderThickness="{TemplateBinding BorderThickness}"
                                                CornerRadius="6">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"
                                                              Margin="{TemplateBinding Padding}"/>
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#45a049"/>
                                            </Trigger>
                                            <Trigger Property="IsPressed" Value="True">
                                                <Setter TargetName="border" Property="Background" Value="#3d8b40"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Button.Template>
                            </Button>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>