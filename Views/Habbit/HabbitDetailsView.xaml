<UserControl x:Class="HabbitFlow.Views.Habbit.HabbitDetailsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Style="{StaticResource MaterialDesignIconButton}"
                        Foreground="White" Command="{Binding GoBackCommand}">
                    <materialDesign:PackIcon Kind="ArrowLeft"/>
                </Button>

                <TextBlock Grid.Column="1" Text="{Binding HabitName}" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"
                          TextAlignment="Center"/>

                <Button Grid.Column="2" Content="Редактировать" 
                        Background="White"
                        Foreground="#4CAF50"
                        BorderThickness="0"
                        Padding="12,6"
                        
                        FontWeight="SemiBold"
                        Command="{Binding EditHabitCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20">
                <!-- Habit Info -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="20">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Row="0" Grid.Column="0" Grid.RowSpan="4" 
                                Width="60" Height="60" Background="#E8F5E8" 
                                CornerRadius="30" Margin="0,0,15,0">
                            <materialDesign:PackIcon Kind="{Binding HabitIcon}" 
                                                    Foreground="#4CAF50" 
                                                    VerticalAlignment="Center" HorizontalAlignment="Center"/>
                        </Border>

                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding HabitName}" 
                                  FontSize="18" FontWeight="Bold" Foreground="#333333"/>

                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Description}" 
                                  FontSize="13" Foreground="#666666" Margin="0,5,0,0"
                                  TextWrapping="Wrap"/>

                        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <Border Background="#E8F5E8" CornerRadius="12" Padding="6,2">
                                <TextBlock Text="{Binding Category}" FontSize="11" 
                                          FontWeight="SemiBold" Foreground="#4CAF50"/>
                            </Border>
                            <Border Background="#E3F2FD" CornerRadius="12" Padding="6,2" Margin="5,0,0,0">
                                <TextBlock Text="{Binding Frequency}" FontSize="11" 
                                          FontWeight="SemiBold" Foreground="#2196F3"/>
                            </Border>
                        </StackPanel>

                        <StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Margin="0,10,0,0">
                            <materialDesign:PackIcon Kind="Clock" Width="16" Height="16" 
                                                    Foreground="#666666" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Time}" FontSize="13" Foreground="#666666"
                                      Margin="5,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Progress Section -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Прогресс" 
                                  FontSize="16" FontWeight="Bold" Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <Grid Margin="0,0,0,10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Текущая серия" FontSize="13" Foreground="#666666"/>
                                <TextBlock Text="{Binding CurrentStreak}" FontSize="20" 
                                          FontWeight="Bold" Foreground="#4CAF50"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="Успешность" FontSize="13" Foreground="#666666" 
                                          HorizontalAlignment="Right"/>
                                <TextBlock Text="{Binding SuccessRate}" FontSize="20" 
                                          FontWeight="Bold" Foreground="#4CAF50" 
                                          HorizontalAlignment="Right"/>
                            </StackPanel>
                        </Grid>

                        <ProgressBar Value="{Binding CompletionProgress}" Maximum="100" 
                                    Height="8" Background="#E0E0E0" Foreground="#4CAF50"
                                    />
                    </StackPanel>
                </Border>

                <!-- Actions -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Padding="20">
                    <StackPanel>
                        <TextBlock Text="Действия" 
                                  FontSize="16" FontWeight="Bold" Foreground="#333333"
                                  Margin="0,0,0,15"/>

                        <Button Content="Выполнить сейчас" 
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,12"
                                
                                FontWeight="SemiBold"
                                FontSize="14"
                                Command="{Binding CompleteHabitCommand}"/>

                        <Button Content="Отложить" 
                                Style="{StaticResource MaterialDesignOutlinedButton}"
                                BorderBrush="#4CAF50"
                                Foreground="#4CAF50"
                                BorderThickness="1"
                                Padding="20,10"
                                
                                FontWeight="SemiBold"
                                FontSize="14"
                                Margin="0,10,0,0"
                                Command="{Binding SkipHabitCommand}"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
