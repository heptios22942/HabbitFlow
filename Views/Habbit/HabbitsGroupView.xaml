<UserControl x:Class="HabbitFlow.Views.Habbit.HabbitsGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="FormatListBulleted" Grid.Column="0" 
                                        Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Группы привычек" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>

                <Button Grid.Column="2" Content="+ Новая группа" 
                        Background="White"
                        Foreground="#4CAF50"
                        BorderThickness="0"
                        Padding="15,10"
                        
                        FontWeight="SemiBold"
                        Command="{Binding AddNewGroupCommand}"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#FFF8F9FA">
            <StackPanel Margin="20">
                <!-- Groups List -->
                <ItemsControl ItemsSource="{Binding HabitGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                                    Margin="0,0,0,15" Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Group Icon -->
                                    <Border Grid.Column="0" Width="48" Height="48" 
                                            Background="#4CAF50" 
                                            CornerRadius="24" Margin="0,0,15,0">
                                        <TextBlock Text="{Binding Icon}" FontSize="18" 
                                                  Foreground="White" 
                                                  HorizontalAlignment="Center" 
                                                  VerticalAlignment="Center" FontWeight="Bold"/>
                                    </Border>

                                    <!-- Group Info -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                                  FontSize="16" FontWeight="Bold" Foreground="#333333"/>
                                        <TextBlock Text="{Binding Description}" 
                                                  FontSize="13" Foreground="#666666"
                                                  TextWrapping="Wrap" Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                            <TextBlock Text="Привычек: " 
                                                      FontSize="12" Foreground="#666666"/>
                                            <TextBlock Text="{Binding HabitsCount}" 
                                                      FontSize="12" FontWeight="SemiBold" Foreground="#4CAF50"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                                        <Button Content="Редактировать" 
                                                Style="{StaticResource MaterialDesignTextButton}"
                                                Foreground="#4CAF50"
                                                FontWeight="Medium"
                                                Command="{Binding DataContext.EditGroupCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                        <Button Content="Добавить" 
                                                Background="#4CAF50"
                                                Foreground="White"
                                                BorderThickness="0"
                                                Padding="12,6"
                                               
                                                FontWeight="SemiBold"
                                                Margin="10,0,0,0"
                                                Command="{Binding DataContext.AddHabitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                <!--{Binding ShowEmptyState, Converter={StaticResource BooleanToVisibilityConverter}}-->
                <!-- Empty State -->
                <Border Visibility="Visible"
                       Margin="0,40" Padding="40" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="FormatListBulleted" Width="80" Height="80" 
                                                Foreground="#CCCCCC"
                                                HorizontalAlignment="Center"/>
                        <TextBlock Text="У вас пока нет групп привычек" 
                                  FontSize="18" FontWeight="Bold" Foreground="#333333"
                                  HorizontalAlignment="Center" Margin="0,20,0,10"/>
                        <TextBlock Text="Создайте свою первую группу для отслеживания привычек" 
                                  FontSize="14" Foreground="#666666"
                                  HorizontalAlignment="Center" TextAlignment="Center"/>
                        <Button Content="Создать группу" 
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="2"
                                
                                FontWeight="SemiBold"
                                Margin="0,20,0,0"
                                Command="{Binding AddNewGroupCommand}">


                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
