<UserControl x:Class="HabbitFlow.Views.Habbit.HabbitsGroupView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="FormatListBulleted" 
                                        Foreground="White" 
                                        VerticalAlignment="Center"
                                        Width="24" Height="24"/>

                <TextBlock Grid.Column="1" 
                          Text="Группы привычек" 
                          FontSize="22" 
                          FontWeight="Bold" 
                          Foreground="White" 
                          VerticalAlignment="Center" 
                          Margin="15,0,0,0"/>

                <Button Grid.Column="2" 
                        Content="+ Новая группа" 
                        Background="White"
                        Foreground="#4CAF50"
                        BorderThickness="0"
                        Padding="15,10"
                        FontSize="14"
                        FontWeight="SemiBold"
                        Cursor="Hand"
                        Command="{Binding AddNewGroupCommand}">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="White"/>
                            <Setter Property="Foreground" Value="#4CAF50"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" 
              VerticalScrollBarVisibility="Auto" 
              Background="#F8F9FA">
            <StackPanel Margin="20">

                <!-- Groups List -->
                <ItemsControl ItemsSource="{Binding HabitGroups}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                            CornerRadius="8" 
                            BorderThickness="1" 
                            BorderBrush="#E0E0E0"
                            Margin="0,0,0,15" 
                            Padding="20">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Group Icon -->
                                    <Border Grid.Column="0" 
                                    Width="48" 
                                    Height="48" 
                                    Background="#4CAF50" 
                                    CornerRadius="24" 
                                    Margin="0,0,15,0">
                                        <TextBlock Text="{Binding Icon}" 
                                           FontSize="18" 
                                           Foreground="White" 
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center" 
                                           FontWeight="Bold"/>
                                    </Border>

                                    <!-- Group Info -->
                                    <StackPanel Grid.Column="1" 
                                        VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Name}" 
                                           FontSize="16" 
                                           FontWeight="Bold" 
                                           Foreground="#333333"/>
                                        <TextBlock Text="{Binding Memo}" 
                                           FontSize="13" 
                                           Foreground="#666666"
                                           TextWrapping="Wrap" 
                                           Margin="0,5,0,0"/>
                                        <StackPanel Orientation="Horizontal" 
                                            Margin="0,8,0,0">
                                            <TextBlock Text="Привычек: " 
                                               FontSize="12" 
                                               Foreground="#666666"/>
                                            <TextBlock Text="0" 
                                               FontSize="12" 
                                               FontWeight="SemiBold" 
                                               Foreground="#4CAF50"/>
                                        </StackPanel>
                                    </StackPanel>

                                    <!-- Actions -->
                                    <StackPanel Grid.Column="2" 
                                        Orientation="Horizontal" 
                                        VerticalAlignment="Center">

                                        <!-- Edit Button -->
                                        <Button Content="Редактировать" 
                                        Background="Transparent"
                                        Foreground="#4CAF50"
                                        BorderThickness="0"
                                        FontSize="13"
                                        FontWeight="Medium"
                                        Padding="12,8"
                                        Cursor="Hand"
                                        Margin="0,0,10,0">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Setter Property="Foreground" Value="#4CAF50"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#E8F5E8"/>
                                                            <Setter Property="Foreground" Value="#45a049"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <!-- Add Habit Button -->
                                        <Button Content="Добавить привычку" 
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="15,8"
                                        FontSize="13"
                                        FontWeight="SemiBold"
                                        Cursor="Hand">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#4CAF50"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsMouseOver" Value="True">
                                                            <Setter Property="Background" Value="#45a049"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <Border Visibility="{Binding IsEmpty, Converter={StaticResource BooleanToVisibilityConverter}}"
               Margin="0,40" 
               Padding="40" 
               Background="White" 
               CornerRadius="8" 
               BorderThickness="1" 
               BorderBrush="#E0E0E0">
                    <StackPanel HorizontalAlignment="Center" 
                                VerticalAlignment="Center">

                        <materialDesign:PackIcon Kind="FormatListBulleted" 
                                                Width="80" 
                                                Height="80" 
                                                Foreground="#CCCCCC"
                                                HorizontalAlignment="Center"/>

                        <TextBlock Text="У вас пока нет групп привычек" 
                                  FontSize="18" 
                                  FontWeight="Bold" 
                                  Foreground="#333333"
                                  HorizontalAlignment="Center" 
                                  Margin="0,20,0,10"/>

                        <TextBlock Text="Создайте свою первую группу для отслеживания привычек" 
                                  FontSize="14" 
                                  Foreground="#666666"
                                  HorizontalAlignment="Center" 
                                  TextAlignment="Center"
                                  TextWrapping="Wrap"
                                  MaxWidth="300"/>

                        <Button Content="Создать группу" 
                                Background="#4CAF50"
                                Foreground="White"
                                BorderThickness="0"
                                Padding="20,12"
                                FontSize="14"
                                FontWeight="SemiBold"
                                Cursor="Hand"
                                Margin="0,20,0,0"
                                Command="{Binding AddNewGroupCommand}">
                            <Button.Style>
                                <Style TargetType="Button">
                                    <Setter Property="Background" Value="#4CAF50"/>
                                    <Setter Property="Foreground" Value="White"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Background" Value="#45a049"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                        </Button>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>