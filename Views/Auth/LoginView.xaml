<Window x:Class="HabbitFlow.Views.Auth.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:viewModels="clr-namespace:HabbitFlow.ViewModels"
        WindowStyle="None" AllowsTransparency="True"
       xmlns:local="clr-namespace:HabbitFlow.Views.USERCONTROL"
        Background="Transparent" WindowStartupLocation="CenterOwner"
        Height="800" Width="1000"
        Title="Login" Cursor="">



    <Window.Resources>
        <Style x:Key="TextBoxWithUserIcon" TargetType="TextBox" BasedOn="{StaticResource MaterialDesignTextBox}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Grid>
                            <!-- Основная рамка -->
                            <Border 
                                CornerRadius="8"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="1"
                                Background="{TemplateBinding Background}"/>

                            <!-- Иконка -->
                            <Path 
                                Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                                Fill="Black"
                                HorizontalAlignment="Left"
                                VerticalAlignment="Center"
                                Margin="12,0,0,0"
                                Width="20"
                                Height="20"/>

                            <!-- Содержимое TextBox -->
                            <ScrollViewer 
                                x:Name="PART_ContentHost"
                                Padding="40,0,10,0"
                                BorderThickness="0"
                                Background="Transparent"
                                VerticalAlignment="Center"
                                HorizontalAlignment="Stretch"/>
                        </Grid>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="30" Background="White">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <local:TopBar VerticalAlignment="Top" Grid.ColumnSpan="2"/>
            <materialDesign:PackIcon 
                Kind="User" 
                Foreground="Green"
                Width="230"
                Height="201"
                Margin="386,177,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2"/>

            <!-- Поле Логин -->
            <Grid Height="40" Margin="304,71,301,89" Grid.ColumnSpan="2" Grid.Row="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="17*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>

                <Border 
                    Width="389"
                    CornerRadius="8"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White" Margin="-10,0,10,0" Grid.RowSpan="2"/>

                <Path 
                    Data="M12,4A4,4 0 0,1 16,8A4,4 0 0,1 12,12A4,4 0 0,1 8,8A4,4 0 0,1 12,4M12,14C16.42,14 20,15.79 20,18V20H4V18C4,15.79 7.58,14 12,14Z"
                    Fill="Black"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Margin="4,10,0,0"
                    Width="20"
                    Height="20"/>

                <TextBox 
                    materialDesign:HintAssist.Hint="Введите логин"
                    Style="{StaticResource MaterialDesignTextBox}"
                    BorderThickness="0"
                    Foreground="Black"
                    Background="Transparent"
                    Padding="0,0,10,0"
                    Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}"
                    VerticalAlignment="Top" 
                    Margin="32,0,29,0" 
                    Height="40" 
                    Grid.RowSpan="2"/>
            </Grid>

            <!-- Поле Пароль -->
            <Grid Width="389" Height="40" Margin="296,126,315,34" Grid.Row="2" Grid.ColumnSpan="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="57*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>

                <Border 
                    CornerRadius="8"
                    BorderBrush="Black"
                    BorderThickness="1"
                    Background="White" Margin="0,-2,0,2" Grid.ColumnSpan="2"/>

                <materialDesign:PackIcon 
                    Kind="Password" 
                    Foreground="Black"
                    Width="20"
                    Height="20"
                    Margin="12,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"/>

                <PasswordBox 
                    x:Name="PasswordBox"
                    materialDesign:HintAssist.Hint="Введите пароль"
                    Foreground="Black"
                    Style="{StaticResource MaterialDesignPasswordBox}"
                    BorderThickness="0"
                    Background="Transparent"
                    Padding="40,0,10,0"
                    VerticalAlignment="Center" 
                    Grid.ColumnSpan="2"
                    />
            </Grid>

            <!-- Кнопка Войти -->
            <Button 
                Grid.Row="3" 
                Grid.ColumnSpan="2"
                Content="ВОЙТИ"
                Style="{StaticResource MaterialDesignRaisedSecondaryButton}"
                Background="Black"
                Foreground="White"
                Height="45"
                Width="200"
                FontSize="14"
                FontWeight="SemiBold"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="402,55,0,0"
                Command="{Binding LoginCommand}">
            </Button>

            <!-- Кнопки управления окном -->




            <!-- Snackbar -->
            <TextBlock
Margin="321,193,79,182" 
Grid.Row="2" 
                Width="100" Grid.RowSpan="2" Style="{StaticResource MaterialDesignHelperTextBlock}">
                <Hyperlink NavigateUri="RegistrationView.xaml">
                    Регистрация
                </Hyperlink>
            </TextBlock>
            <TextBlock
Margin="73,194,327,181" 
Grid.Row="2" 
                Width="100" Grid.RowSpan="2" Style="{StaticResource MaterialDesignHelperTextBlock}" Grid.Column="1">
                <Hyperlink NavigateUri="EmailConfirmation.xaml">
                    Забыли пароль?
                </Hyperlink>
            </TextBlock>

        </Grid>
    </Border>
</Window>