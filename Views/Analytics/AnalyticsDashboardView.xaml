<UserControl x:Class="HabbitFlow.Views.Analytics.AnalyticsDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="ChartLine" Grid.Column="0" 
                                        Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Аналитика" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>

                <ComboBox Grid.Column="2" 
                         ItemsSource="{Binding TimePeriods}"
                         SelectedItem="{Binding SelectedTimePeriod}"
                         Background="White"
                         Foreground="#333333"
                         BorderThickness="1"
                         BorderBrush="#E0E0E0"
                         Padding="10"
                         
                         Width="140"/>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20">
                <!-- Progress Chart Area -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Прогресс привычек" 
                                  FontSize="18" FontWeight="Bold" 
                                  Foreground="#333333" Margin="0,0,0,15"/>

                        <!-- Chart Placeholder -->
                        <Border Background="#F8F9FA" Height="300" CornerRadius="4"
                                BorderThickness="1" BorderBrush="#E0E0E0">
                            <TextBlock Text="📈 График прогресса будет отображаться здесь" 
                                      FontSize="14" Foreground="#666666"
                                      HorizontalAlignment="Center" VerticalAlignment="Center"
                                      TextAlignment="Center"/>
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Statistics Grid -->
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Best Habits -->
                    <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                            Margin="0,0,10,0" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Лучшие привычки" 
                                      FontSize="16" FontWeight="Bold" Foreground="#333333"
                                      Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding BestHabits}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,8">
                                            <Grid Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="13" Foreground="#333333" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="Star" 
                                                                            Width="14" Height="14"
                                                                            Foreground="#4CAF50"/>
                                                    <TextBlock Text="{Binding AverageRating}" 
                                                              FontSize="13" FontWeight="SemiBold" Foreground="#4CAF50"
                                                              Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Нет данных" 
                                      FontSize="13" Foreground="#666666"
                                      HorizontalAlignment="Center" Margin="0,20"
                                      Visibility="Visible"/>
                            <!--{Binding ShowNoBestHabits, Converter={StaticResource BooleanToVisibilityConverter}}-->
                        </StackPanel>
                    </Border>

                    <!-- Worst Habits -->
                    <Border Grid.Column="1" 
                            Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                            Margin="10,0,0,0" Padding="20">
                        <StackPanel>
                            <TextBlock Text="Сложные привычки" 
                                      FontSize="16" FontWeight="Bold" Foreground="#333333"
                                      Margin="0,0,0,15"/>

                            <ItemsControl ItemsSource="{Binding WorstHabits}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,8">
                                            <Grid Margin="0,5">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>

                                                <TextBlock Text="{Binding Name}" 
                                                          FontSize="13" Foreground="#333333" VerticalAlignment="Center"/>
                                                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                                                    <materialDesign:PackIcon Kind="AlertCircle" 
                                                                            Width="14" Height="14"
                                                                            Foreground="#FF6B6B"/>
                                                    <TextBlock Text="{Binding CompletionRate}" 
                                                              FontSize="13" FontWeight="SemiBold" Foreground="#FF6B6B"
                                                              Margin="5,0,0,0"/>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>

                            <TextBlock Text="Нет данных" 
                                      FontSize="13" Foreground="#666666"
                                      HorizontalAlignment="Center" Margin="0,20"
                                      Visibility="Visible"/>
                            <!--{Binding ShowNoWorstHabits, Converter={StaticResource BooleanToVisibilityConverter}}-->
                        </StackPanel>
                    </Border>
                </Grid>

                <!-- Monthly Summary -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,20,0,0" Padding="20">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <!-- Total Completed -->
                        <StackPanel Grid.Column="0" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding TotalCompleted}" FontSize="28" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#4CAF50"/>
                            <TextBlock Text="Выполнено привычек" FontSize="13" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>

                        <!-- Success Rate -->
                        <StackPanel Grid.Column="1" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding SuccessRate}" FontSize="28" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#4CAF50"/>
                            <TextBlock Text="Успешность" FontSize="13" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>

                        <!-- Streak -->
                        <StackPanel Grid.Column="2" HorizontalAlignment="Center">
                            <TextBlock Text="{Binding CurrentStreak}" FontSize="28" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#4CAF50"/>
                            <TextBlock Text="Текущая серия" FontSize="13" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
