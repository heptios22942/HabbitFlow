<Window x:Class="HabbitFlow.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dashVM="clr-namespace:HabbitFlow.ViewModels.Dashboard"    
        xmlns:habbitgroupVM="clr-namespace:HabbitFlow.ViewModels.Habits"    
        xmlns:analizVM="clr-namespace:HabbitFlow.ViewModels.Analytics"    
        xmlns:dash="clr-namespace:HabbitFlow.Views.Dashboard"
        xmlns:habbitgroup="clr-namespace:HabbitFlow.Views.Habbit"
        
        xmlns:analiz="clr-namespace:HabbitFlow.Views.Analytics" 
        xmlns:local="clr-namespace:HabbitFlow.Views.USERCONTROL"
        Background="Transparent"
        WindowStyle="None" 
        AllowsTransparency="True"
        Title="MainWindow" 
        Height="1080" 
        Width="1920">

    <Window.Resources>
        <!-- Dashboard -->
        <DataTemplate DataType="{x:Type dashVM:DashboardViewModel}">
            <dash:DashboardView />
        </DataTemplate>

        <!-- Habits - исправлен неймспейс -->

        <DataTemplate DataType="{x:Type habbitgroupVM:HabitGroupListViewModel}">
            <habbitgroup:HabbitsGroupView/>
        </DataTemplate>


        <!-- Analytics -->
        <DataTemplate DataType="{x:Type analizVM:AnalyticsDashboardViewModel}">
            <analiz:AnalyticsDashboardView />
        </DataTemplate>

    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="10" />
    </WindowChrome.WindowChrome>

    <Border CornerRadius="12" Background="White" BorderBrush="Black" BorderThickness="2">
        <Grid Background="Transparent">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="36"/>
                <RowDefinition Height="auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Bar -->
            <Grid Grid.ColumnSpan="2">
                <local:TopBar/>
            </Grid>

            <!-- Side Bar -->
            <Grid Grid.Column="0" VerticalAlignment="Bottom" Height="auto" Grid.Row="3" Margin="0 25 0 0" Background="Transparent">
                <local:SideBar DataContext="{Binding}"/>
            </Grid>

            <!-- Content Area -->
            <Grid Grid.Column="1" Grid.Row="3">
                <Border Background="Transparent" Padding="20">
                    <ContentControl Content="{Binding CurrentView}"/>
                </Border>
            </Grid>
        </Grid>
    </Border>
</Window>