<UserControl x:Class="HabbitFlow.Views.Notification.NotificationMain"
              xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
         xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
         xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         mc:Ignorable="d" 
         d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <materialDesign:PackIcon Kind="Bell" Grid.Column="0" 
                                    Foreground="White" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="1" Text="Уведомления" 
                      FontSize="22" FontWeight="Bold" 
                      Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <Button Content="Пометить все как прочитанные" 
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="White"
                        FontWeight="Medium"
                        Command="{Binding MarkAllAsReadCommand}"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20">
                <!-- Notifications List -->
                <ItemsControl ItemsSource="{Binding Notifications}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                                Margin="0,0,0,10" Padding="15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Notification Icon -->
                                    <Border Grid.Column="0" Width="36" Height="36" 
                                        Background="#E8F5E8" 
                                        CornerRadius="18" Margin="0,0,12,0">
                                        <materialDesign:PackIcon Kind="{Binding Icon}" 
                                                            Foreground="#4CAF50" 
                                                            VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                    </Border>

                                    <!-- Notification Content -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Title}" 
                                              FontWeight="SemiBold" Foreground="#333333"/>
                                        <TextBlock Text="{Binding Message}" 
                                              FontSize="12" Foreground="#666666" 
                                              TextWrapping="Wrap" Margin="0,2,0,0"/>
                                        <TextBlock Text="{Binding Time}" 
                                              FontSize="11" Foreground="#999999" Margin="0,4,0,0"/>
                                    </StackPanel>

                                    <!-- Action -->
                                    <Button Grid.Column="2" 
                                        Content="Прочитано"
                                        Background="#4CAF50"
                                        Foreground="White"
                                        BorderThickness="0"
                                        Padding="10,5"
                                        
                                        FontSize="11"
                                        FontWeight="SemiBold"
                                        Command="{Binding DataContext.MarkAsReadCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <!-- Empty State -->
                <!--{Binding ShowEmptyState, Converter={StaticResource BooleanToVisibilityConverter}}-->
                <Border Visibility="Visible"
                   Margin="0,40" Padding="40" Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="BellOutline" Width="80" Height="80" 
                                            Foreground="#CCCCCC"
                                            HorizontalAlignment="Center"/>
                        <TextBlock Text="У вас нет уведомлений" 
                              FontSize="18" FontWeight="Bold" Foreground="#333333"
                              HorizontalAlignment="Center" Margin="0,20,0,10"/>
                        <TextBlock Text="Здесь будут появляться ваши уведомления и напоминания" 
                              FontSize="14" Foreground="#666666"
                              HorizontalAlignment="Center" TextAlignment="Center"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
