<UserControl x:Class="HabbitFlow.Views.Dashboard.DashboardView"
                      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#4CAF50" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" Text="📊" FontSize="24" VerticalAlignment="Center" Foreground="White"/>
                <TextBlock Grid.Column="1" Text="Дашборд" 
                          FontSize="22" FontWeight="Bold" 
                          Foreground="White" VerticalAlignment="Center" Margin="15,0,0,0"/>

                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="{Binding CurrentTime}" Foreground="White" 
                              VerticalAlignment="Center" Margin="0,0,20,0" FontWeight="Medium"/>
                    <Border Background="White" CornerRadius="12" Padding="8,4">
                        <TextBlock Text="{Binding UserName}" Foreground="#4CAF50" 
                                  VerticalAlignment="Center" FontWeight="SemiBold"/>
                    </Border>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Background="#F8F9FA">
            <StackPanel Margin="20">
                <!-- Today's Habits Section -->
                <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                        Margin="0,0,0,20" Padding="20">
                    <StackPanel>
                        <TextBlock Text="Сегодняшние привычки" 
                                  FontSize="18" FontWeight="Bold" 
                                  Foreground="#333333" Margin="0,0,0,15"/>

                        <ItemsControl ItemsSource="{Binding TodayHabits}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#F0F0F0" BorderThickness="0,0,0,1" Padding="0,12">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="Auto"/>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>

                                            <Border Width="36" Height="36" Background="#E8F5E8" 
                                                    CornerRadius="18" Margin="0,0,15,0">
                                                <materialDesign:PackIcon Kind="CheckCircle" 
                                                                        Foreground="#4CAF50" 
                                                                        VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                            </Border>

                                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                <TextBlock Text="{Binding Name}" 
                                                          FontWeight="SemiBold" Foreground="#333333"/>
                                                <TextBlock Text="{Binding Time}" 
                                                          FontSize="12" Foreground="#666666" Margin="0,2,0,0"/>
                                            </StackPanel>

                                            <Button Grid.Column="2" 
                                                    Content="Начать"
                                                    Background="#4CAF50"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    Padding="15,8"
                                                   
                                                    FontWeight="SemiBold"
                                                    Command="{Binding DataContext.StartHabitCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <TextBlock Text="{Binding NoHabitsMessage}" 
                                  FontSize="14" Foreground="#666666"
                                  TextAlignment="Center" Margin="0,20" 
                                  Visibility="Visible"/>
                        <!--{Binding ShowNoHabitsMessage, Converter={StaticResource BooleanToVisibilityConverter}}-->
                    </StackPanel>
                </Border>

                <!-- Quick Stats -->
                <WrapPanel Orientation="Horizontal" HorizontalAlignment="Stretch">
                    <!-- Completion Rate -->
                    <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                            Margin="0,0,15,15" Width="180" Padding="20">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Border Width="40" Height="40" Background="#E8F5E8" CornerRadius="20">
                                <materialDesign:PackIcon Kind="TrendingUp" Foreground="#4CAF50" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding CompletionRate}" FontSize="24" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Успеваемость" FontSize="12" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>
                    </Border>

                    <!-- Average Rating -->
                    <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                            Margin="0,0,15,15" Width="180" Padding="20">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Border Width="40" Height="40" Background="#E8F5E8" CornerRadius="20">
                                <materialDesign:PackIcon Kind="Star" Foreground="#4CAF50" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding AverageRating}" FontSize="24" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Средняя оценка" FontSize="12" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>
                    </Border>

                    <!-- Active Habits -->
                    <Border Background="White" CornerRadius="8" BorderThickness="1" BorderBrush="#E0E0E0"
                            Margin="0,0,15,15" Width="180" Padding="20">
                        <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                            <Border Width="40" Height="40" Background="#E8F5E8" CornerRadius="20">
                                <materialDesign:PackIcon Kind="PlaylistCheck" Foreground="#4CAF50" 
                                                        HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <TextBlock Text="{Binding ActiveHabitsCount}" FontSize="24" 
                                      FontWeight="Bold" HorizontalAlignment="Center" Foreground="#333333"
                                      Margin="0,10,0,5"/>
                            <TextBlock Text="Активные привычки" FontSize="12" 
                                      HorizontalAlignment="Center" TextAlignment="Center" Foreground="#666666"/>
                        </StackPanel>
                    </Border>
                </WrapPanel>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>